<%= form_for @expense, :html => { :class => "form-horizontal expense" } do |f| %>
<% if @expense.errors.any? %>
<div id="error_expl" class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title"><%= pluralize(@expense.errors.count, "error") %> prohibited this expense from being saved:</h3>
  </div>
  <div class="panel-body">
    <ul>
      <% @expense.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>

<div class="form-group">
  <div class="row">
    <div class="col-xs-8">
      <%= f.label :date, :class => 'control-label' %>
      <%= f.text_field :date_of_expense, class: "form-control" %>
    </div>
  </div>
  <%= error_span(@expense[:date_of_expense]) %>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-xs-8">
      <%= f.label :category, :class => 'control-label' %>
      <%= f.text_field :category_name , class: "form-control" %>
      <%= javascript_tag "observeAutocompleteField('expense_category_name', '#{escape_javascript search_categories_path()}')"%>
    </div>
  </div>
  <%= error_span(@expense[:category_id]) %>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-xs-8">
      <%= f.label :amount, :class => 'control-label' %>
      <%= f.text_field :amount, :class => 'form-control' %>
    </div>
  </div>
  <%= error_span(@expense[:amount]) %>
</div>

<% accounts = Account.all %>
<% unless accounts.blank? %>
<div class="form-group">
  <div class="row">
    <div class="col-xs-8">
      <%= f.label :account_id, :class => 'control-label' %>
      <%= f.collection_select :account_id, accounts, :id, :name, {prompt: "Select a account"}, {class: "form-control"} %>
    </div>
  </div>
  <%= error_span(@expense[:account_id]) %>
</div>
<% end %>


<%= f.submit nil, :class => 'btn btn-primary' %>
<%= link_to t('.cancel', :default => t("helpers.links.cancel")),
expenses_path, :class => 'btn btn-default' %>

<% end %>

<script type="text/javascript">
  $(function () {
    $('#expense_date_of_expense').datepicker({ dateFormat: 'dd-mm-yy' });
  });
</script>